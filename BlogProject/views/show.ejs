<%- include("partials/header") %>


<div class="ui main text container">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached segment">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.image %>">
            <div class="content">
                <span><%= blog.date.toDateString() %></span>
            </div>
            <a href="/blogs/<%= blog.id %>/edit">Edit Blog</a>
            <div class="description"><p><%= blog.content %></p></div>
            <form action="/blogs/<%= blog.id %>?_method=DELETE" method="POST">
                <button class="ui mini negative button">Delete Blog</button>
            </form>
        </div>
    </div>
</div>


<%- include("partials/footer") %>
