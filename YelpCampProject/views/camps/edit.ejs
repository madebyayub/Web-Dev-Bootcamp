<%- include("../partials/header") %>
<div class="container">
    <div class="row text-center">
        <h1>Edit <%= campground.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%= campground.id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[name]" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[image]" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[description]" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Edit</button>
                </div>
            </form>
        </div>
        <a href="/campgrounds/<%= campground.id %>">Go back</a>
    </div>
</div>
<%- include("../partials/footer") %>