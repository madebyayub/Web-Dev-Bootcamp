<%- include("../partials/header") %>
<div class="container">
    <div class="row text-center">
        <h1>Edit Comment</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%= camp.id %>/comments/<%= comment.id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Submit</button>
                </div>
            </form>
        </div>
        <a href="/campgrounds">Go back</a>
    </div>
</div>
<%- include("../partials/footer") %>