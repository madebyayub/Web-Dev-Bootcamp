<%- include("../partials/header") %>
<div class="container">
    <div class="row text-center">
        <h1>Add a New Comment to <%= camp.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%= camp.id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Submit</button>
                </div>
            </form>
        </div>
        <a href="/campgrounds">Go back</a>
    </div>
</div>
<%- include("../partials/footer") %>